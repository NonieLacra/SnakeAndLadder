<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_light_inversePrimary"
    tools:context=".player4">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/playgamebtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="592dp"
        android:background="@drawable/btn_design"
        android:fontFamily="sans-serif-condensed"
        android:text="Start Game"
        android:textColor="#FAF6F6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/player1_field"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/text_field"
        android:drawableLeft="@drawable/player_logo"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Player 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.303" />

    <EditText
        android:id="@+id/player2_field"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/text_field"
        android:drawableLeft="@drawable/player_logo"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Player 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/player1_field"
        app:layout_constraintVertical_bias="0.181" />

    <EditText
        android:id="@+id/player3_field"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/text_field"
        android:drawableLeft="@drawable/player_logo"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Player 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/player1_field"
        app:layout_constraintVertical_bias="0.364" />

    <EditText
        android:id="@+id/player4_field"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/text_field"
        android:drawableLeft="@drawable/player_logo"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Player 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/player1_field"
        app:layout_constraintVertical_bias="0.536" />

    <ImageButton
        android:id="@+id/backBtn2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_design"
        android:src="?attr/actionModeCloseDrawable"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>